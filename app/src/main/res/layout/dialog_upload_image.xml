<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dp25"
        android:layout_marginRight="@dimen/margin_dp25"
        android:background="@drawable/custom_dialog_bg">

        <TextView
            android:id="@+id/tv_upload_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_dp25"
            android:layout_marginTop="@dimen/margin_dp25"
            android:text="Upload Profile Photo"
            android:textColor="@color/colorGreenText"
            android:textSize="@dimen/textsize_sp17" />

        <TextView
            android:id="@+id/tv_Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_userprofile"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp25"
            android:layout_marginTop="@dimen/margin_dp25"
            android:text="SAVE"
            android:textSize="@dimen/textsize_sp15"
            android:textColor="@color/colorGreenText"
            android:layout_marginBottom="@dimen/margin_dp50"/>


        <TextView
            android:id="@+id/tv_skippnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_userprofile"
            android:layout_marginLeft="@dimen/margin_dp25"
            android:layout_marginTop="@dimen/margin_dp25"
            android:text="SKIP FOR NOW"
            android:textSize="@dimen/textsize_sp15"
            android:textColor="@color/colorGreenText"
            android:layout_marginBottom="@dimen/margin_dp50"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_userprofile"
            android:layout_width="@dimen/margin_dp150"
            android:layout_height="@dimen/margin_dp150"
            android:layout_below="@+id/tv_upload_images"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_dp40"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/shap_ovel"
            android:layout_below="@+id/img_userprofile"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="-40dp"
            android:layout_toRightOf="@+id/img_userprofile">

            <ImageView
                android:id="@+id/img_openmedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_camera"
                android:visibility="visible"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>