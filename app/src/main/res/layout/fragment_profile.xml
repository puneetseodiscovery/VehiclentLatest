<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weel_bg"
    tools:context=".mainActivity.bottomFragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_userprofile"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorGreenButton">


            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:padding="@dimen/padding_dp15"
                android:visibility="visible"
                app:srcCompat="@drawable/img_edit" />

            <ImageView
                android:id="@+id/img_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/padding_dp15"
                android:visibility="gone"
                app:srcCompat="@drawable/img_done" />

            <TextView
                android:id="@+id/tv_userprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/user_profile"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp22" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_userprofile">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_userprofile"
                        android:layout_width="@dimen/margin_dp150"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_dp45"
                        android:src="@drawable/user_profile" />

                    <RelativeLayout
                        android:id="@+id/img_opncamera"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/shap_ovel"
                        android:layout_marginLeft="-50dp"
                        android:visibility="invisible"
                        android:layout_toRightOf="@+id/img_userprofile"
                        android:layout_alignBottom="@+id/img_userprofile">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_camera"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_userprofile"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_dp25"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp22" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/tv_username"
                        android:layout_marginTop="@dimen/margin_dp20"
                        android:background="@color/colorBlack" />


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_marginLeft="@dimen/margin_dp25"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:padding="@dimen/padding_dp7"
                        android:text="First Name:-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <EditText
                        android:id="@+id/edit_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_marginLeft="@dimen/margin_dp70"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/edit_first_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />


                    <TextView
                        android:id="@+id/Lastname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:layout_marginLeft="@dimen/margin_dp25"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:padding="@dimen/padding_dp7"
                        android:text="Last Name:-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <EditText
                        android:id="@+id/edit_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:layout_marginLeft="@dimen/margin_dp70"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <View
                        android:id="@+id/view03"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/edit_last_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view03"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/padding_dp7"
                        android:text="Gender:-"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <TextView
                        android:id="@+id/edit_user_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view03"
                        android:layout_alignLeft="@+id/edit_first_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />


                    <View
                        android:id="@+id/view032"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/edit_user_gender"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view032"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/padding_dp7"
                        android:text="@string/useremail"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <EditText
                        android:id="@+id/edit_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view032"
                        android:layout_alignLeft="@+id/edit_first_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <View
                        android:id="@+id/view43"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/edit_user_email"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />


                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view43"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:padding="@dimen/padding_dp7"
                        android:text="@string/usermobile"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <EditText
                        android:id="@+id/edit_user_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view43"
                        android:layout_alignLeft="@+id/edit_first_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint=""
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="3"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/edit_user_mobile"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view4"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:padding="@dimen/padding_dp7"
                        android:text="@string/useraddress"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <TextView
                        android:id="@+id/tv_user_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view4"
                        android:layout_alignLeft="@+id/edit_first_name"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:layout_marginRight="@dimen/margin_dp25"
                        android:layout_toRightOf="@+id/name"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:padding="@dimen/padding_dp7"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_sp16" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_size_dp0.5"
                        android:layout_below="@+id/tv_user_address"
                        android:layout_marginTop="@dimen/margin_dp12"
                        android:background="@color/colorBlack" />


                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>