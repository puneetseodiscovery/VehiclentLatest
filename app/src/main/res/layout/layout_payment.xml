<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_dp110">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="@dimen/margin_dp60"
            android:layout_height="@dimen/margin_dp60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:src="@drawable/paytm" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_dp20"
            app:srcCompat="@drawable/arrow_next" />

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_dp35"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_toRightOf="@+id/img_card"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Paytm"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_sp18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_dp0.5"
            android:layout_below="@+id/img_card"
            android:layout_marginTop="@dimen/margin_dp20"
            android:background="@color/colorBlack" />
    </RelativeLayout>
</RelativeLayout>
