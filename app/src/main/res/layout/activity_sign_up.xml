<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:id="@+id/layout_signup"
    tools:context=".signupActivity.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_Applogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_dp25"
                    android:src="@drawable/new_logo" />


                <EditText
                    android:id="@+id/edit_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/img_Applogo"
                    android:layout_marginLeft="@dimen/margin_dp35"
                    android:layout_marginTop="@dimen/margin_dp45"
                    android:layout_marginRight="@dimen/margin_dp25"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="First Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <EditText
                    android:id="@+id/edit_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_firstname"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="Last Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_lastname"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="Gender"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/tv_gender"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_email"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <EditText
                    android:id="@+id/edit_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_password"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="Confirm Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <EditText
                    android:id="@+id/edit_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_confirm_password"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:hint="Phone-No"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <TextView
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_mobileno"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp8"
                    android:background="@drawable/custom_edittext_bg"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_dp15"
                    android:paddingRight="@dimen/padding_dp25"
                    android:text="Address"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp17" />

                <RelativeLayout
                    android:id="@+id/realtive_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp45"
                    android:layout_below="@+id/edit_address"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <CheckBox
                            android:id="@+id/checked"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight=".3"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1" />

                        <TextView
                            android:id="@+id/tv_iagree"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_dp25"
                            android:gravity="center_vertical"
                            android:layout_weight="2.6"
                            android:background="@drawable/custom_edittext_bg"
                            android:paddingLeft="@dimen/padding_dp10"
                            android:text="@string/i_agree_all_the_term_of_your_services"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_sp13" />
                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_user_signup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp50"
                    android:layout_below="@+id/realtive_checkbox"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp15"
                    android:background="@drawable/custom_signin_bg"
                    android:text="@string/sign_up_user"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_sp20" />


                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_user_signup"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_dp10"
                    android:gravity="center"
                    android:text="@string/or"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_sp15" />

                <RelativeLayout
                    android:id="@+id/realtive_social_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_or"
                    android:layout_alignLeft="@+id/edit_firstname"
                    android:layout_alignRight="@+id/edit_firstname"
                    android:layout_marginTop="@dimen/margin_dp10">

                    <LinearLayout
                        android:id="@+id/linear_sociallogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_dp20"
                        android:layout_marginRight="@dimen/margin_dp20"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:visibility="gone"
                            android:layout_marginBottom="30dp" />

                        <ImageView
                            android:id="@+id/img_facebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="-20dp"
                            android:src="@drawable/fb" />

                        <ImageView
                            android:id="@+id/img_google"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="-20dp"
                            android:src="@drawable/g" />

                        <com.google.android.gms.common.SignInButton
                            android:id="@+id/google_login_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="@dimen/margin_dp25"
                            android:layout_marginRight="@dimen/margin_dp25"
                            android:layout_marginTop="@dimen/margin_dp30"
                            android:visibility="gone" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_sociallogin"
                        android:layout_marginTop="@dimen/margin_dp25">

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="@dimen/margin_dp150"
                            android:layout_height="@dimen/margin_dp50"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/margin_dp25"
                            android:background="@drawable/custom_login_bg"
                            android:text="@string/login"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textsize_sp17" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>